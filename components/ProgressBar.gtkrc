style "ProgressBar" = "Default"
{
    xthickness = 1
    ythickness = 1

    engine "pixmap"
    {
        image
        {
            function = BOX
            detail = "bar"
            file = "ui/ProgressBarProgressed.png"
            border = { 5, 5, 5, 5 }
            stretch = TRUE
        }

        image
        {
            function = BOX
            recolorable = TRUE
            detail = "trough"
            file = "ui/ProgressBar.png"
            border = { 3, 3, 4, 4}
            stretch = TRUE
            orientation = HORIZONTAL
        }
    }
}

class "GtkProgressBar" style "ProgressBar"