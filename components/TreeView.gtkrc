style "TreeView" = "Default"
{
    xthickness = 2
    ythickness = 0

    engine "pixmap"
    {
        image
        {
            function = FLAT_BOX
            state = SELECTED
            file = "ui/TreeViewSelectedItem.png"
            border = { 4, 4, 4, 4 }
            stretch = TRUE
        }
    }
}

style "TreeViewHeadings" = "Default"
{
    engine "pixmap"
    {
        image
        {
            function = BOX
            state = NORMAL
            file = "ui/TreeViewHeaderNormal.png"
            border = { 4, 4, 4, 4 }
        }

        image
        {
            function = BOX
            state = PRELIGHT
            file = "ui/TreeViewHeaderPrelight.png"
            border = { 4, 4, 4, 4 }
            stretch = TRUE
        }

        image
        {
            function = BOX
            state = ACTIVE
            file = "ui/TreeViewHeaderActive.png"
            border = { 4, 4, 4, 4 }
            stretch = TRUE
        }

        image
        {
            function = BOX
            state = INSENSITIVE
            file = "ui/TreeViewHeaderInsensitive.png"
            border = { 4, 4, 4, 4 }
            stretch = TRUE
        }
    }
}

class "GtkTreeView" style "TreeView"
widget_class "*<GtkTreeView>" style "TreeView"
widget_class "*<GtkTreeView>.<GtkButton>" style "TreeViewHeadings"