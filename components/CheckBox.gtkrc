style "CheckBox" = "Default"
{
    bg[NORMAL] = @DarkAccent
    bg[PRELIGHT] = @DarkAccent
    bg[ACTIVE] = @DarkAccent
    bg[SELECTED] = @DarkAccent
    bg[INSENSITIVE] = @DarkAccent

    text[ACTIVE] = @LightAccent6
}

style "CheckBoxText" = "Default"
{
    fg[INSENSITIVE] = @DarkAccent
}

widget_class "*<GtkCheckButton>" style "CheckBox"
widget_class "*<GtkCheckButton>.<GtkLabel>" style "CheckBoxText"